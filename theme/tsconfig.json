{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ESNext.Array", "DOM", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["./*.ts"],
    "exclude": ["**/dist/**", "node_modules"]
}
